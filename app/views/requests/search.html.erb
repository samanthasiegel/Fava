<% provide(:title, "Search Results") %>

<article id="main">
	<header>
		<h2>Search Results</h2>
		
              <span id="startchange"></span>
			<section class="wrapper style5">
				<p> Click on an item for more information, or to place an order for it! </p>
				<% @food_items.each do |f| %>
					<div class="inner">
						<%= link_to f.food_name, food_item_profile_path(food_item: f.id) %>
					</div>
				<% end %>
				<p></p>
				<button class="special" href="#">
                    <%= link_to "Searh for Another Item", "/search_by_keyword" %>
                </button>
			</section>
		
	</header>
</article>

