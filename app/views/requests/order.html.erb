<% provide(:title, "Order Request") %>
<article id="main">
	<header>
		<h2>Request Delivery</h2>
		<p>Where you can post a delivery request for others to see</p>
	</header>
	<section class="wrapper style5">
		<div class="inner">
			<% flash.each do |key, value| %>
        		<div class="alert alert-<%= key %>"><%= value %></div>
      		<% end %>
      			<% if !@msg.nil? and @msg == '1' %>
      				<h2 style="text-align:center; color:red; font-size:18px;"> Invalid tip entry.</h2>
      			<% elsif !@msg.nil? and @msg == '2' %>
      				<h2 style="text-align:center; color:red; font-size:18px;"> Invalid location entry.</h2>
      			<% end %>
      		
			<%= form_for @request do |f| %>
					<div class="row uniform">
						<h4> What are you hungry for? </h4>
						<div class="12u$">
							<%= f.text_field :food_item_id, class: 'form-control', value: @food_item.id, :readonly => true%>
						</div>
						<div class="12u$">
							<%= f.text_field :restaurant_id, class: 'form-control', value: @restaurant.id, :readonly => true%>
						</div>
						<div class="12u$">
							<%= f.text_field :food_name, class: 'form-control', value: @food_item.food_name, :readonly => true, :disabled => true%>
						</div>
						<div class="12u$">
							<%= f.text_field :restaurant_name, class: 'form-control', value: @restaurant.name, :readonly => true , :disabled => true%>
						</div>
						<% if @sides.size > 0 %>
							<div class="12u$">
								<h5> Choose a side: </h5>
								<%= f.collection_select :side_id, @sides, :id, :options %>

							</div>
						<% end %>

						<% if @sizes.size > 0 %>
							<div class="12u$">
								<h5> Choose a size: </h5>
								<%= f.collection_select :size_id, @sizes, :id, :full_descr %>

							</div>
						<% end %>
						
						<div class="12u$">
							<%= f.text_field :location, class: 'form-control', placeholder:"Location for delivery" %>
						</div>
						<div class="12u$">
							<%= f.text_field :notes, class: 'form-control', placeholder:"Add ons? Notes?" %>
						</div>
						<div class="12u$">
							<%= f.text_field :tip, class: 'form-control', placeholder:"Tip $ amount" %>
						</div>
						<div class="12u$">
							<ul class="actions">
								<li><%=f.submit "Post", class: "special" %></li>
							</ul>
						</div>
					</div>
				<% end %>

		</div>
	</section>
</article>